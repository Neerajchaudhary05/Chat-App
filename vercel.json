{
    "buildCommand": "npm --prefix client run build",
    "outputDirectory": "client/dist",
    "framework": "vite",
    "functions": {
        "server/server.js": {
            "runtime": "nodejs18.x"
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}